---
import Card from "../components/Card.astro";

const { title } = Astro.props;
let social_links = [
  { name: "Github", href: "https://github.com/gd0st" },
  {
    name: "Instagram",
    href: "https://instagram.com/yannick_dorn",
  },
];

const version = "0.2.0";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/png" href="/icon.webp" /> -->
    <link rel="icon" type="images/x-icon" href="/icon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>

  <body>
    <main>
      <slot />
      <Card title="Contact Me">
        <footer>
          <ul>
            {
              social_links.map((item) => {
                return (
                  <li>
                    <a href={item.href}>{item.name}</a>
                  </li>
                );
              })
            }
          </ul>
          <a id="version-descriptor" href="https://github.com/gd0st">
            <p>v {version}</p>
          </a>
        </footer>
      </Card>
    </main>
  </body>
</html>

<style>
  ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    text-align: center;
  }

  ul > li {
    display: block;
  }

  html,
  body {
    background-color: whitesmoke;
  }

  footer ul {
  }
  footer {
  }
  a:hover {
    color: gray;
  }
  a {
    text-decoration: none;
    color: black;
    text-align: right;
  }

  main {
    display: grid;
    place-items: center;
    gap: 1vw;
  }
  ul > li {
    /* margin: 0 5px; */
  }
</style>

<style is:global>
  @font-face {
    font-family: "Press Start 2P";
    src: url("/fonts/PressStart2P-Regular.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Orbitron";
    src: url("/fonts/Orbitron-Regular.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
